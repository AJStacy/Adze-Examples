{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "lib": ["DOM", "ES2018"],
    "declaration": true,
    "declarationDir": "types",
    "preserveConstEnums": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "assets"]
}
